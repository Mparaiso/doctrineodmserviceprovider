<html>
<head>
    <link rel="stylesheet" href="{{app.request.baseUrl}}/static/vendor/bootstrap/css/bootstrap.min.css" />
</head>
<body>
    <div class="main">
        {% block blog_header %}
        <header>
            <h2>
                <a href="{{path('home')}}">Doctrine ODM MongoDB And Silex blog demo</a>
            </h2>

            <h3>
               <small> Register a new account , write articles about stuffs !</small>
            </h3>
        </header>
        {% endblock %}
        <div class='nav'>
            <a href="{{path('home')}}">Home</a> | 
        {% block mp_user_menu %}
        {% include app['mp.user.template.status'] %}
            |
            <a href='{{path('mp_crud_post_index')}}'>Administration</a>
        </div>
        
        {% endblock %}
        {% block mp_user_flash %}
        {% include app['mp.user.template.flash'] %}
        {% endblock %}
        {% block blog_content %}
        {% endblock %}
    </div>
    <style type="text/css">
    body {
        font-size: 100%;
        font-family: Verdana,Tahoma, sans-serif;
    }

    p {
        font-family: Times, sans-serif;
    }

    .main {
        margin: auto;
        width: 75%;
    }

    label {
        min-width: 100px;
        vertical-align: top;
        display: inline-block;
    }
    </style>
</body>
</html>

